{
  "name": "concert-search-v2-be",
  "version": "0.0.1",
  "description": "concert-search-back-end",
  "author": "jacob-greenwald",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "rm -rf ./dist && nest build --webpack",
    "build:watch": "rm -rf ./dist && nest build --webpack --watch",
    "deploy": "npm run build && serverless deploy --stage prod",
    "deploy-v2": "npm run build && serverless deploy --stage prod-v2",
    "deploy:test": "npm run build && serverless deploy --stage test",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:dev": "npm run build:watch & serverless offline start --reloadHandler",
    "start:mocks": "WITH_MOCKS=true npm run start:dev",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.3",
    "@nestjs/core": "^11.1.3",
    "archive-search": "^1.1.15",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "lodash.chunk": "4.2.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.30.1",
    "@nestjs/testing": "^11.1.3",
    "@types/aws-lambda": "8.10.150",
    "@types/aws-serverless-express": "^3.3.10",
    "@types/express": "5.0.3",
    "@types/jest": "30.0.0",
    "@types/lodash.chunk": "4.2.9",
    "@types/node": "^22.15.34",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "8.35.1",
    "@typescript-eslint/parser": "8.35.1",
    "aws-lambda": "^1.0.7",
    "dotenv": "^17.2.0",
    "eslint": "9.30.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "globals": "^16.3.0",
    "jest": "^30.0.3",
    "msw": "^2.10.3",
    "prettier": "^3.6.2",
    "serverless-offline": "^14.4.0",
    "source-map-support": "0.5.21",
    "supertest": "^7.1.1",
    "terser-webpack-plugin": "^5.3.14",
    "ts-jest": "^29.4.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
